@model PresensiSiswa.Models.Attendance

<style>
    .form-container {
        max-width: 500px;
        margin: 40px auto;
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #1f2937;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 6px;
        font-weight: 600;
        color: #374151;
    }

    input,
    select,
    textarea {
        width: 100%;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #d1d5db;
        font-size: 14px;
    }

    input:focus,
    select:focus,
    textarea:focus {
        outline: none;
        border-color: #f59e0b;
        box-shadow: 0 0 0 2px rgba(245, 158, 11, 0.15);
    }

    textarea {
        resize: vertical;
        min-height: 80px;
    }

    .btn-group {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .btn-update {
        flex: 1;
        padding: 12px;
        background-color: #f59e0b;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
    }

    .btn-update:hover {
        background-color: #d97706;
    }

    .btn-cancel {
        flex: 1;
        padding: 12px;
        background-color: #e5e7eb;
        color: #374151;
        border-radius: 6px;
        text-align: center;
        text-decoration: none;
        font-weight: 600;
    }

    .btn-cancel:hover {
        background-color: #d1d5db;
    }
</style>

<div class="form-container">
    <h2>‚úèÔ∏è Edit Presensi</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>Nama</label>
            <input asp-for="Nama" />
        </div>

        <div class="form-group">
            <label>Tanggal</label>
            <input asp-for="Tanggal" type="date" />
        </div>

        <div class="form-group">
            <label>Status</label>
            <select asp-for="Status">
                <option>Hadir</option>
                <option>Sakit</option>
                <option>Izin</option>
                <option>Tanpa Keterangan</option>
            </select>
        </div>

        <div class="form-group">
            <label>Catatan</label>
            <textarea asp-for="Note"></textarea>
        </div>

        <div class="btn-group">
            <button type="submit" class="btn-update">üíæ Update</button>
            <a asp-action="Index" class="btn-cancel">Batal</a>
        </div>
    </form>
</div>
